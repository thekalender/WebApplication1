@model WebApplication1.EmployeeListViewModel 

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RazorDemo</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>City Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.CityId</td>
                </tr>
            }
        </tbody>
    </table>

    <p>Mail me : ahmetkalender@@gmail.com</p>

    @{var date = DateTime.Now - TimeSpan.FromDays(3);}

    <p> 3 Day ago was - @date</p>

    @{ 
        var number = 10;
    }

    @if (number > 10)
    {
        <p>Sayınız 10 dan büyüktür.</p>
    }
    else if(number == 10)
    {
        <p>Sayınız 10'a eşittir.</p>
    }
    else
    {
        <p>Sayınız 10dan küçüktür</p>
    }

</body>
</html>
